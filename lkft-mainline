#!/bin/bash

. $(dirname $0)/functions

PATCHES=0
if [ -n "$1" ]; then
        AOSP="$1"
else
        AOSP="`pwd`"
fi

if ! [ -d "$AOSP" ] && ! [ -d "$AOSP/bionic" ] && [ -d "$AOSP"/build ]; then
        echo "This script must be run from the AOSP source directory"
        echo "or with the AOSP source directory as its first parameter."
        exit 1
fi

function apply_jstultz_mainline_patch(){
    local commit_id=$1 && shift
    curl_am https://git.linaro.org/people/john.stultz/android-dev.git/patch/?id=${commit_id} kernel/common/mainline
}

##################################################
################ Linaro hack   ###################
##################################################
## HACK: usb: dwc2: Disable sg_supported on gadget
## https://git.linaro.org/people/john.stultz/android-dev.git/commit/?h=dev/hikey-mainline-WIP&id=248fc0d31f793c268078e8227310f91677943a03
#apply_jstultz_mainline_patch 248fc0d31f793c268078e8227310f91677943a03

##############FOR ADB STUCK####################
## FROMGIT: usb: gadget: f_fs: don't free buffer prematurely
## revert kernel/common/mainline 4b4ee2f983b2653c46dcfb6b9dd227cd61cbd9f0
## usb: gadget: f_fs: Allow scatter-gather buffers
## revert kernel/common/mainline 772a7a724f69d258025fedd87dde1aafe4171aef

## Revert "security: Implement Clang's stack initialization"
revert kernel/common/mainline 709a972efb01efaeb97cad1adc87fe400119c8ab
if [ -d kernel/jstultz/hikey-mainline ]; then
    revert kernel/jstultz/hikey-mainline 709a972efb01efaeb97cad1adc87fe400119c8ab
fi

######## Patches for 5.3-rc1 ###############################
## Revert "nl80211: require and validate vendor command policy"
revert kernel/common/mainline 901bb9891855164fdcfcfdd9c3d25bcc800d3f5b

## Fix the kernel could not boot from uefi problem
## Maybe caused when only have the vdso fix following
## arm64/sve: fix genksyms generation
## http://android-review.linaro.org/c/kernel/common/+/20656
apply --linaro --local kernel/common/mainline --remote kernel/common 20656/1

## Fix android service always restarted problem
## arm64: vdso: Fix ABI regression in compat vdso
## http://android-review.linaro.org/c/kernel/common/+/20657
apply --linaro --local kernel/common/mainline --remote kernel/common 20657/1

#!/bin/bash

. $(dirname $0)/functions

PATCHES=0
if [ -n "$1" ]; then
        AOSP="$1"
else
        AOSP="`pwd`"
fi

if ! [ -d "$AOSP" ] && ! [ -d "$AOSP/bionic" ] && [ -d "$AOSP"/build ]; then
        echo "This script must be run from the AOSP source directory"
        echo "or with the AOSP source directory as its first parameter."
        exit 1
fi

function apply_amit_mainline_patch(){
    local commit_id=$1 && shift
    local target_dir="kernel/common/mainline"
    if [ -n "$1" ]; then
        target_dir=$1 && shift
    fi
    if [ -d ${target_dir} ]; then
        curl_am https://git.linaro.org/people/amit.pundir/linux.git/patch/?id=${commit_id} ${target_dir}
    fi
}

function apply_jstultz_mainline_patch(){
    local commit_id=$1 && shift
    local target_dir="kernel/common/mainline"
    if [ -n "$1" ]; then
        target_dir=$1 && shift
    fi
    if [ -d ${target_dir} ]; then
        curl_am https://git.linaro.org/people/john.stultz/android-dev.git/patch/?id=${commit_id} ${target_dir}
    fi
}

function apply_patchwork(){
    local patch_id=$1 && shift
    local target_dir="common"
    if [ -n "$1" ]; then
        target_dir=$1 && shift
    fi
    if [ -d ${target_dir} ]; then
        curl_am https://lore.kernel.org/patchwork/patch/${patch_id}/mbox/ ${target_dir}
    fi
}
##################################################
################ Linaro hack   ###################
##################################################
## FROMLIST: phy: qcom-qusb2: Re add "qcom,sdm845-qusb2-phy" compat string
## https://android-review.googlesource.com/c/kernel/common/+/1278668/1
## https://lkml.org/lkml/2020/4/2/1181
apply --local common --remote kernel/common 1278668/1

## FROMLIST: remoteproc: fix a bug in rproc_alloc()
## https://android-review.googlesource.com/c/kernel/common/+/1278669/1
apply --local common --remote kernel/common 1278669/1
## FROMLIST: remoteproc: qcom_q6v5_mss: fix a bug in q6v5_probe()
## https://android-review.googlesource.com/c/kernel/common/+/1278670
apply --local common --remote kernel/common 1278670/1
## FROMLIST: remoteproc: qcom_q6v5_mss: fix q6v5_probe() error paths
## https://android-review.googlesource.com/c/kernel/common/+/1278671
apply --local common --remote kernel/common 1278671/1

## FROMLIST: iommu/arm-smmu: Allow inherting stream mapping from bootloader
## https://android-review.googlesource.com/c/kernel/common/+/1284525
apply --local common --remote kernel/common 1284525/1

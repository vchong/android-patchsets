#!/bin/bash

. $(dirname $0)/functions

PATCHES=0
if [ -n "$1" ]; then
        AOSP="$1"
else
        AOSP="`pwd`"
fi

if ! [ -d "$AOSP" ] && ! [ -d "$AOSP/bionic" ] && [ -d "$AOSP"/build ]; then
        echo "This script must be run from the AOSP source directory"
        echo "or with the AOSP source directory as its first parameter."
        exit 1
fi

function apply_jstultz_mainline_patch(){
    local commit_id=$1 && shift
    local local_dir=$1 && shift
    curl_am https://git.linaro.org/people/john.stultz/android-dev.git/patch/?id=${commit_id} ${local_dir}
}

##################################################
################ Linaro hack   ###################
##################################################
## FROMLIST: iommu/arm-smmu: Allow inherting stream mapping from bootloader
## https://android-review.googlesource.com/c/kernel/common/+/1284525
apply --local common --remote kernel/common 1284525/1

## dwc3: Remove check for HWO flag in dwc3_gadget_ep_reclaim_trb_sg()
## https://git.linaro.org/people/john.stultz/android-dev.git/commit/?h=dev/hikey960-mainline-WIP&id=0dd7fbbb756ae323bf1c43022a7ca500b353b1e2
apply_jstultz_mainline_patch 0dd7fbbb756ae323bf1c43022a7ca500b353b1e2 common

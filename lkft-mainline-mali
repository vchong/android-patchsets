#!/bin/bash

. $(dirname $0)/functions

PATCHES=0
if [ -n "$1" ]; then
        AOSP="$1"
else
        AOSP="`pwd`"
fi

if ! [ -d "$AOSP" ] && ! [ -d "$AOSP/bionic" ] && [ -d "$AOSP"/build ]; then
        echo "This script must be run from the AOSP source directory"
        echo "or with the AOSP source directory as its first parameter."
        exit 1
fi

function apply_jstultz_mainline_patch(){
    local commit_id=$1 && shift
    curl_am https://git.linaro.org/people/john.stultz/android-dev.git/patch/?id=${commit_id} kernel/common/mainline
}

##################################################
################ Linaro hack   ###################
##################################################
## hikey_defconfig/hi6220.dtsi: enable Mali support
## http://android-review.linaro.org/c/kernel/common/+/20519
apply --linaro --local kernel/common/mainline --remote kernel/common 20519/1

## mali source to compile it as a kernel module
## http://android-review.linaro.org/c/kernel/common/+/20512
apply --linaro --local kernel/common/mainline --remote kernel/common 20512/4

## HACK: MALI: 4.20-rc fix to use vmf_insert_pfn
## https://git.linaro.org/people/john.stultz/android-dev.git/patch/?id=8a9ad8e33b44cec6c209d9894eb665011ed014fb
apply_jstultz_mainline_patch 8a9ad8e33b44cec6c209d9894eb665011ed014fb

## MALI: 4.20-rc time fixup
## https://git.linaro.org/people/john.stultz/android-dev.git/patch/?id=4f517b3fa9c150e015e2eebfbf68c6c1f02738cc
apply_jstultz_mainline_patch 4f517b3fa9c150e015e2eebfbf68c6c1f02738cc

## MALI: Build fixup for 5.1-rc on using vm_fault_t
## https://git.linaro.org/people/john.stultz/android-dev.git/patch/?id=d824e645c2a64c695cff6ccb4718d03acc14a1d2
apply_jstultz_mainline_patch d824e645c2a64c695cff6ccb4718d03acc14a1d2

## MALI: access_ok fix for 5.0-rc
## https://git.linaro.org/people/john.stultz/android-dev.git/patch?id=c9d871991a5d3b9a8a6c66dd97f77a53ca6c80e0
apply_jstultz_mainline_patch c9d871991a5d3b9a8a6c66dd97f77a53ca6c80e0

## MALI: build warning fixes
## https://git.linaro.org/people/john.stultz/android-dev.git/commit/drivers/gpu/arm_gpu/mali_kbase_fence.c?h=dev/hikey960-mainline-WIP&id=1569f81544fb3410645c702c58ba2e0c4b250395
apply_jstultz_mainline_patch 1569f81544fb3410645c702c58ba2e0c4b250395

## MALI: v4.21/5.0 build fixes
## https://git.linaro.org/people/john.stultz/android-dev.git/commit/drivers/gpu/arm_gpu/mali_kbase_gpuprops.c?h=dev/hikey960-mainline-WIP&id=c3af69ccabe9b6ba714048a2358005699902bbbc
apply_jstultz_mainline_patch c3af69ccabe9b6ba714048a2358005699902bbbc

## HACK: MALI: 4.20-rc fix to use vmf_insert_pfn
## https://git.linaro.org/people/john.stultz/android-dev.git/commit/drivers/gpu/arm_gpu/mali_kbase_mem_linux.c?h=dev/hikey960-mainline-WIP&id=af2ae3d6220d4208288942e26b85851fa8307a1f
apply_jstultz_mainline_patch af2ae3d6220d4208288942e26b85851fa8307a1f

## MALI: bifrost: Bulid fixup for 5.1-rc
## https://git.linaro.org/people/john.stultz/android-dev.git/commit/drivers/gpu/arm_gpu?h=dev/hikey960-mainline-WIP&id=71cdf3bd2fcafc525253e789d543ddb0c985e294
apply_jstultz_mainline_patch 71cdf3bd2fcafc525253e789d543ddb0c985e294

#!/bin/bash

. $(dirname $0)/functions

PATCHES=0
if [ -n "$1" ]; then
        AOSP="$1"
else
        AOSP="`pwd`"
fi

if ! [ -d "$AOSP" ] && ! [ -d "$AOSP/bionic" ] && [ -d "$AOSP"/build ]; then
        echo "This script must be run from the AOSP source directory"
        echo "or with the AOSP source directory as its first parameter."
        exit 1
fi

##################################################
################ Linaro hack for LCR##############
##################################################
## workaround to include linaro tests
## http://android-review.linaro.org/c/device/ti/beagle-x15/+/20295
apply --linaro --local device/ti/beagle_x15 --remote device/ti/beagle-x15 20295/2

if [ -d kernel/ti/4.19 ]; then
## revert the change of Revert "usb: gadget: ffs: Fix BUG when userland exits with submitted AIO transfers"
## http://git.ti.com/ti-linux-kernel/ti-linux-kernel/commit/8b87305f816cf58b7a4c840b2bedfd37a8c06254
revert kernel/ti/4.19 8b87305f816cf58b7a4c840b2bedfd37a8c06254
fi

if [ -d kernel/ti/4.19 ]; then
    ## remove Android.mk in kernel to workaround android building problem
    ## http://android-review.linaro.org/c/kernel/omap/+/20430
    apply --linaro --local kernel/ti/4.19 --remote kernel/omap 20430/1
fi
if [ -d kernel/ti/4.14 ]; then
    ## remove Android.mk in kernel to workaround android building problem
    ## http://android-review.linaro.org/c/kernel/omap/+/20430
    apply --linaro --local kernel/ti/4.14 --remote kernel/omap 20430/1
fi

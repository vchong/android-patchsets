#!/bin/bash

. $(dirname $0)/functions

PATCHES=0
if [ -n "$1" ]; then
        AOSP="$1"
else
        AOSP="`pwd`"
fi

if ! [ -d "$AOSP" ] && ! [ -d "$AOSP/bionic" ] && [ -d "$AOSP"/build ]; then
        echo "This script must be run from the AOSP source directory"
        echo "or with the AOSP source directory as its first parameter."
        exit 1
fi

##################################################
################ Linaro hack   ###################
##################################################
## workaround to include linaro tests
## https://android-review.linaro.org/#/c/device/ti/beagle-x15/+/20334/
apply --linaro --local device/ti/beagle_x15 --remote device/ti/beagle-x15 20334/2

## workaround to build kernel and pvrsvrkm
## http://android-review.linaro.org/c/device/ti/beagle-x15/+/20314
apply --linaro --local device/ti/beagle_x15 --remote device/ti/beagle-x15 20314/6

## revert the change of Revert "usb: gadget: ffs: Fix BUG when userland exits with submitted AIO transfers"
## http://git.ti.com/ti-linux-kernel/ti-linux-kernel/commit/8b87305f816cf58b7a4c840b2bedfd37a8c06254
revert kernel/ti/4.19 8b87305f816cf58b7a4c840b2bedfd37a8c06254

## tablet_core_hardware_beagle_x15.xml: add more basic system services
## http://android-review.linaro.org/c/device/ti/beagle-x15/+/20395
apply --linaro --local device/ti/beagle_x15 --remote device/ti/beagle-x15 20395/1

## patch enabled build with -C and O= options specified
curl_am http://people.linaro.org/~yongqin.liu/patches/x15-pie/0001-pvr-module-workaround-for-compiling-problem.patch kernel/ti/4.19
